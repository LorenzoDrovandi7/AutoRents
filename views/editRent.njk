{% extends "base.njk" %}

{% block title %}Edit Rent{% endblock %}

{% block content %}
<section class="section">
  <div class="container">
    <h1 class="title is-2">Edit Rent #{{ rent.id }}</h1>

    <form action="/rents/{{ rent.id }}/edit" method="POST">
      <div class="field">
        <label class="label">Car ID</label>
        <div class="control">
          <input class="input" type="number" name="car_id" value="{{ rent.car_id }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Client ID</label>
        <div class="control">
          <input class="input" type="number" name="client_id" value="{{ rent.client_id }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Price per Day</label>
        <div class="control">
          <input class="input" type="number" step="0.01" name="price_per_day" value="{{ rent.price_per_day }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Start Date</label>
        <div class="control">
          <input class="input" type="date" name="start_date" value="{{ rent.start_date }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">End Date</label>
        <div class="control">
          <input class="input" type="date" name="end_date" value="{{ rent.end_date }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Total Price</label>
        <div class="control">
          <input class="input" type="number" step="0.01" name="total_price" value="{{ rent.total_price }}" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Payment Method</label>
        <div class="control">
          <div class="select">
            <select name="payment_method" required>
              <option value="cash" {% if rent.payment_method == 'cash' %}selected{% endif %}>Cash</option>
              <option value="card" {% if rent.payment_method == 'card' %}selected{% endif %}>Card</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Was Paid?</label>
        <div class="control">
          <div class="select">
            <select name="was_paid" required>
              <option value="1" {% if rent.was_paid == 1 %}selected{% endif %}>Yes</option>
              <option value="0" {% if rent.was_paid == 0 %}selected{% endif %}>No</option>
            </select>
          </div>
        </div>
      </div>

      <button class="button is-warning" type="submit">Update Rent</button>
    </form>
  </div>
</section>
{% endblock %}
