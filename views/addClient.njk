{% extends "base.njk" %}

{% block content %}
<section class="section">
  <div class="container">
    <h1 class="title is-2">Add Client</h1>
    <form action="/clients/add" method="POST" class="box">

      <div class="field">
        <label class="label">First Name</label>
        <div class="control">
          <input class="input" type="text" name="name" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Last Name</label>
        <div class="control">
          <input class="input" type="text" name="surname" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Document Type</label>
        <div class="control">
          <input class="input" type="text" name="type_of_document" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Document Number</label>
        <div class="control">
          <input class="input" type="text" name="document" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Nationality</label>
        <div class="control">
          <input class="input" type="text" name="nationality" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Address</label>
        <div class="control">
          <input class="input" type="text" name="address" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Phone</label>
        <div class="control">
          <input class="input" type="text" name="phone" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input" type="email" name="email" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Birthday</label>
        <div class="control">
          <input class="input" type="date" name="birthday" required />
        </div>
      </div>

      <div class="field is-grouped mt-4">
        <div class="control">
          <button class="button is-primary" type="submit">Add</button>
        </div>
        <div class="control">
          <a class="button is-light" href="/clients">Cancel</a>
        </div>
      </div>

    </form>
  </div>
</section>
{% endblock %}
