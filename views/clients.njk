{% extends "base.njk" %}

{% block title %}Our clients{% endblock %}

{% block content %}
<section class="section">
  <div class="container.is-widescreen">
    <h1 class="title is-1">Our clients:</h1>
    <a href="/clients/add" class="button is-primary mb-4">Add new client</a>
    {% if clients.length > 0 %}
      <div class="columns is-multiline">
        {% for client in clients %}
          <div class="column is-one-fifth">
            <div class="card">
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-3 ">{{ client.name }} {{ client.surname }}</p>
                  </div>
                </div>
                <div class="buttons is-centered mt-3 are-normal">
                  <a href="/clients/{{ client.id }}" class="button is-primary">View</a>
                  <button onclick="deleteClient({{ client.id }})" class="button is-danger">Delete</button>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No registered clients.</p>
    {% endif %}
  </div>
</section>
{% endblock %}
