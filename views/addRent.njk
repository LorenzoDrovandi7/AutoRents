{% extends "base.njk" %}

{% block title %}Add Rent{% endblock %}

{% block content %}
<section class="section">
  <div class="container">
    <h1 class="title is-2">Add New Rent</h1>

    <form action="/rents/add" method="POST">
      <div class="field">
        <label class="label">Car ID</label>
        <div class="control">
          <input class="input" type="number" name="car_id" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Client ID</label>
        <div class="control">
          <input class="input" type="number" name="client_id" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Price per Day</label>
        <div class="control">
          <input class="input" type="number" step="0.01" name="price_per_day" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Start Date</label>
        <div class="control">
          <input class="input" type="date" name="start_date" required />
        </div>
      </div>

      <div class="field">
        <label class="label">End Date</label>
        <div class="control">
          <input class="input" type="date" name="end_date" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Total Price</label>
        <div class="control">
          <input class="input" type="number" step="0.01" name="total_price" required />
        </div>
      </div>

      <div class="field">
        <label class="label">Payment Method</label>
        <div class="control">
          <div class="select">
            <select name="payment_method" required>
              <option value="cash">Cash</option>
              <option value="card">Card</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Was Paid?</label>
        <div class="control">
          <div class="select">
            <select name="was_paid" required>
              <option value="1">Yes</option>
              <option value="0">No</option>
            </select>
          </div>
        </div>
      </div>

      <button class="button is-primary" type="submit">Save Rent</button>
    </form>
  </div>
</section>
{% endblock %}
